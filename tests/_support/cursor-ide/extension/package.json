{
  "name": "cursor-test-harness",
  "displayName": "Cursor Test Harness",
  "description": "Test harness for automating Cursor IDE agent interactions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Testing"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorTestHarness.discoverCommands",
        "title": "Discover All Commands"
      },
      {
        "command": "cursorTestHarness.sendPrompt",
        "title": "Send Test Prompt"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.4.0",
    "glob": "^10.0.0",
    "mocha": "^10.0.0",
    "typescript": "^5.3.0"
  }
}
